<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/door_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#009ACE"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#009ACE"
        android:text="Select a Door:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:textSize="40dp" />

    <Spinner
        android:id="@+id/selectDoor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:backgroundTint="@android:color/darker_gray"
        android:backgroundTintMode="src_atop"
        android:clickable="true"
        android:focusable="true"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/doorCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/selectDoor"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/doorCodeET"
            android:layout_toStartOf="@+id/selectDoorBtn"
            android:layout_weight="1"
            android:text="Enter Door Code"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/doorCodeET"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#fff5f2ff"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxWidth="100dp"
            android:minWidth="100dp"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectDoorBtn"
        android:background="#009ACE"
        android:src="@drawable/com_act_ui_app_logo" />


</LinearLayout>